<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_margin="5dp"
        android:background="@drawable/shadow_background1"
        android:elevation="2dp"
        android:id="@+id/post_data_layout">

    <ImageView
            android:layout_height="20dp"
            android:layout_width="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:id="@+id/post_data_icon"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="12sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/post_data_icon"
            android:layout_margin="2dp"
            android:id="@+id/post_data_header"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="12sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/post_data_header"
            android:layout_margin="2dp"
            android:id="@+id/post_data_qty"/>
</RelativeLayout>